<%- include('partials/header') %>

<div class="card">
  <h1 class="title"><%= t('settings_title') %></h1>
  <form class="settings-grid" id="prefs-form">
    <div>
      <label for="theme"><%= t('settings_theme') %></label>
      <select id="theme" name="theme">
        <option value="light"><%= t('settings_theme_light') %></option>
        <option value="dark"><%= t('settings_theme_dark') %></option>
      </select>
    </div>
    <div>
      <label for="language"><%= t('settings_language') %></label>
      <select id="language" name="language">
        <option value="en">English</option>
        <option value="es">Espa√±ol</option>
      </select>
    </div>
    <div>
      <label for="sound-enabled"><%= t('settings_sound') %></label>
      <label class="toggle-row">
        <input type="checkbox" id="sound-enabled" />
        <span><%= t('settings_sound_enable') %></span>
      </label>
      <label class="muted small" style="display:block;margin-top:6px;">
        <%= t('settings_volume') %>
        <input type="range" id="sound-volume" min="0" max="1" step="0.05" />
      </label>
    </div>
    <div style="align-self:end;">
      <button type="submit"><%= t('settings_save') %></button>
    </div>
  </form>
</div>

<div class="card" style="margin-top:16px;">
  <h3><%= t('settings_alarm') %></h3>
  <p class="muted small"><%= t('settings_alarm_hint') %></p>
  <div class="alarm-grid">
    <label class="toggle-row">
      <input type="checkbox" id="alarm-enabled" />
      <span><%= t('settings_alarm_enable') %></span>
    </label>
    <div>
      <label for="alarm-time"><%= t('settings_alarm_time') %></label>
      <input type="time" id="alarm-time" value="07:00" />
    </div>
    <div>
      <label><%= t('settings_alarm_days') %></label>
      <div class="day-pills" id="alarm-days">
        <% const days = (translations[lang] && translations[lang].settings_days_short) || translations.en.settings_days_short; %>
        <% days.forEach((d, idx) => { %>
          <button type="button" data-day="<%= idx %>"><%= d %></button>
        <% }) %>
      </div>
    </div>
    <div class="controls" style="margin-top:8px;">
      <button id="alarm-save" type="button"><%= t('settings_save') %></button>
      <button id="alarm-test" type="button" class="ghost"><%= t('settings_alarm_test') %></button>
    </div>
    <p class="muted small" id="alarm-next"></p>
  </div>
</div>

<div class="card" style="margin-top:16px;">
  <h3><%= t('settings_backup_title') %></h3>
  <p class="muted"><%= t('settings_backup_desc') %></p>
  <div class="controls">
    <button id="export-data" type="button"><%= t('settings_export') %></button>
    <input type="file" id="import-data" accept="application/json" style="display:none;" />
    <button id="import-data-btn" type="button" class="btn-secondary"><%= t('settings_import') %></button>
    <button id="reset-data" type="button" class="ghost danger"><%= t('settings_reset') %></button>
  </div>
  <p class="muted" id="data-status"></p>
</div>

<div class="card" style="margin-top:16px;">
  <h3><%= t('settings_feedback') %></h3>
  <p class="muted"><%= t('settings_feedback_desc') %></p>
</div>

<%- include('partials/footer', { pageScript: '/js/settings.js' }) %>
