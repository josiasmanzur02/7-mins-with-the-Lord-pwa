<%- include('partials/header') %>

<div class="card">
  <h1 class="title"><%= t('settings_title') %></h1>
  <form class="settings-grid" method="POST" action="/settings">
    <div>
      <label for="theme"><%= t('settings_theme') %></label>
      <select id="theme" name="theme">
        <option value="light" <%= currentUser.theme === 'light' ? 'selected' : '' %>>Light</option>
        <option value="dark" <%= currentUser.theme === 'dark' ? 'selected' : '' %>>Dark</option>
      </select>
    </div>
    <div>
      <label for="language"><%= t('settings_language') %></label>
      <select id="language" name="language">
        <option value="en" <%= currentUser.language === 'en' ? 'selected' : '' %>>English</option>
        <option value="es" <%= currentUser.language === 'es' ? 'selected' : '' %>>Espa√±ol</option>
      </select>
    </div>
    <div style="align-self:end;">
      <button type="submit"><%= t('settings_save') %></button>
    </div>
  </form>
</div>

<div class="card" style="margin-top:16px;">
  <h3><%= t('settings_password_title') %></h3>
  <form class="settings-grid" method="POST" action="/settings/password">
    <div>
      <label for="current_password"><%= t('settings_old_password') %></label>
      <input id="current_password" name="current_password" type="password" required />
    </div>
    <div>
      <label for="new_password"><%= t('settings_new_password') %></label>
      <input id="new_password" name="new_password" type="password" required minlength="6" />
    </div>
    <div>
      <label for="new_password_confirm"><%= t('settings_new_confirm') %></label>
      <input id="new_password_confirm" name="new_password_confirm" type="password" required minlength="6" />
    </div>
    <div style="align-self:end;">
      <button type="submit"><%= t('settings_change_password') %></button>
    </div>
  </form>
</div>

<%- include('partials/footer') %>
