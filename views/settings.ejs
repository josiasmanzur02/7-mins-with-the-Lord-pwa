<%- include('partials/header') %>

<div class="card">
  <h1 class="title">Settings</h1>
  <form class="settings-grid" method="POST" action="/settings">
    <div>
      <label for="theme">Theme</label>
      <select id="theme" name="theme">
        <option value="light" <%= currentUser.theme === 'light' ? 'selected' : '' %>>Light</option>
        <option value="dark" <%= currentUser.theme === 'dark' ? 'selected' : '' %>>Dark</option>
      </select>
    </div>
    <div>
      <label for="language">Language</label>
      <select id="language" name="language">
        <option value="en" <%= currentUser.language === 'en' ? 'selected' : '' %>>English</option>
        <option value="es" <%= currentUser.language === 'es' ? 'selected' : '' %>>Espa√±ol</option>
      </select>
    </div>
    <div style="align-self:end;">
      <button type="submit">Save</button>
    </div>
  </form>
</div>

<%- include('partials/footer') %>
