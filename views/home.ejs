<%- include('partials/header') %>

<div class="grid two">
  <div class="card">
    <p class="muted"><%= t('brand') %></p> 
    <!--h1 class="title"><%= t('home_title') %></h1-->
    <div class="streak-card">
      <div class="streak-head">
        <div>
          <p class="muted small"><%= t('home_subtitle') %></p>
          <div class="streak-days">
            <span id="streak-count">0</span>
            <span class="unit" id="streak-label"><%= lang === 'es' ? 'dÃ­as' : 'days' %></span>
          </div>
        </div>
        <!--span class="streak-chip">ðŸ”¥ Keep it going</span-->
      </div>
      <div class="streak-progress">
