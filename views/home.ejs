      <a class="cta" href="/timer"><%= t('home_cta_start') %></a>
    </div>
  </div>

  <div class="card">
    <h3><%= t('how_it_works') %></h3>
    <ul class="step-list">
      <li class="step-item">1. <%= t('step_calling') %></li>
      <li class="step-item">2. <%= t('step_pray') %></li>
      <li class="step-item">3. <%= t('step_pray_read') %></li>
      <li class="step-item">4. <%= t('step_confession') %></li>
      <li class="step-item">5. <%= t('step_consecration') %></li>
      <li class="step-item">6. <%= t('step_thanks') %></li>
      <li class="step-item">7. <%= t('step_petition') %></li>
    </ul>
  </div>
